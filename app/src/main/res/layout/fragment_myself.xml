<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:src="@mipmap/ic_pic"
        android:id="@+id/myself_picture"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/myself_name_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/myself_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/myself_age_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/myself_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/myself_phone_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/myself_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/myself_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/commit"
            android:textSize="19sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/myself_basePay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/myself_achievement"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


</LinearLayout>